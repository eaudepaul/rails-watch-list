<h2><%= @list.name %></h2>



<% @list.bookmarks.each do |bookmark| %>
<h3><%= bookmark.movie.title %></h3>
<h5><%= bookmark.comment %></h5>
<%= link_to "Delete",
  bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<Br>
<% end %>

